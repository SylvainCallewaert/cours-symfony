{% extends 'parent.html.twig' %}

{% block body %}
    Article - Affichage de tous les articles

    {% for type, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ type }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    {% for art in articles %}
        <div style="border:1px solid red;">
            <p style="font-weight:bold;">Titre de l'article : {{ art.title }} </p>
            <a href="{{ path('article_commentaire_display', {'id': art.id}) }}">
                Lien vers l'article {{ art.id }}
            </a>
            <a href="{{ path('article_commentaire_delete', {'id': art.id}) }}">
               Supprimer l'article {{ art.id }}
            </a>
        </div>
    {% endfor %}
{% endblock %}